<div class="canvas-container">
  <canvas id="the-canvas"></canvas>
  <audio id="audio" src="{{audio}}" hidden></audio>
</div>

<button class="slide-controls" id="prev">&lt</button>

<div class="slide-count">
  <span id="page_num"></span> /
  <span id="page_count"></span>
</div>

<button class="slide-controls" id="next">&gt</button>

<div class="author">
  {{#if user.picture}}
  <img src="{{user.picture}}"> {{else}}
  <img src="{{user.gravatar}}"> {{/if}}
  <div class="author__info">
    <h3>Name</h3>
    <p>Company</p>
  </div>
</div>

<div class="views">
  <a href="#">
    <span class="text-muted">100 views</span>
  </a>
</div>

<div class="share">
  <a href="#" id="button-share">
    <i class="fa fa-share"></i>
  </a>
</div>