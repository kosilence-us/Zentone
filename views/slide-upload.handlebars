<div class="container-fluid">
    {{#if messages.success}}
        <div role="alert" class="alert alert-success">
            {{#each messages.success}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    {{#if messages.error}}
        <div role="alert" class="alert alert-danger">
            {{#each messages.error}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    {{#if messages.info}}
        <div role="alert" class="alert alert-info">
            {{#each messages.info}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    <section id="main-display">
        <form class="dropzone dropzone-big" id="slide-dropzone"></form>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-9 offset-lg-0">
                <a href="#"><img src="img/itsme.jpg" class="img-user"></a>
            </div>
            <div class="col-3">
                <a href="#" id="button-share">
                    <i class="fa fa-share pull-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
